<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppMarina.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppMarina.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="AppMarina">

    <TabBar x:Name="TabBarMarina" >

        <Tab Title="Home">
            <ShellContent ContentTemplate="{DataTemplate local:Home}"
                          Route="Home"/>
        </Tab>

        <Tab Title="Sobre">

            <ShellContent ContentTemplate="{DataTemplate local:Sobre}"
                          Route="Sobre"/>

        </Tab>
        
    </TabBar>

</Shell>
